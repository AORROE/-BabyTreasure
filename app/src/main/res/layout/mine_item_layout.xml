<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mine_ll"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/baby_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="12dp"
        app:contentPaddingBottom="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.hwt.babybag.view.CircleImageVIew
                    android:id="@+id/mine_user_header"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:is_circle="true"
                    android:src="@drawable/icon_zhangweitu"/>
                <TextView
                    android:id="@+id/mine_user_name"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/mine_user_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/text_color"
                    android:text="何老师"/>

                <TextView
                    android:id="@+id/mine_add_time"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textColor="#999999"
                    android:text="2019-03-01 18:00"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/mine_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_color"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/content_img"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="220dp"
                    android:layout_height="200dp"
                    android:scaleType="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">
                <LinearLayout
                    android:id="@+id/comment_ll"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icon_comment"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:clickable="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_comment"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/praise_ll"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icon_praise"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:clickable="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/praise_select"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>